<% if !notice.blank? %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="w-20">Lname</th>
      <th class="w-20">Fname</th>
      <th class="w-20">Email</th>
      <th class="w-20">Thumbnail</th>
      <th class="w-20">Actions</th>
<!--       <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="w-20"><%= user.lname %></td>
        <td class="w-20"><%= user.fname %></td>
        <td class="w-20"><%= user.email %></td>
        <td class="w-20"><%= user.thumbnail %></td>
        <td class="w-20">
          <%= link_to user, class: "btn btn-default btn-sm" do %>
            Show
          <% end %>
          <%= link_to edit_user_path(user), class: "btn btn-default btn-sm" do %>
          Edit
          <% end %>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
          Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>
